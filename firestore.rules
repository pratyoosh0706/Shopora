/**
 * @file Firestore Security Rules for Shopora e-commerce platform.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-specific data (profiles, orders, payments, tracking).
 * Products are publicly readable but admin-managed. Admin privileges are determined by presence in a dedicated collection.
 *
 * Data Structure:
 * - /users/{userId}: User profile data, accessible only by the user.
 * - /roles_admin/{userId}: Admin role indicator; presence grants admin rights.
 * - /products/{productId}: Product catalog, publicly readable, admin-managed.
 * - /users/{userId}/orders/{orderId}: Orders placed by a specific user.
 * - /users/{userId}/payments/{paymentId}: Payment information for a specific user.
 * - /users/{userId}/orderTracking/{trackingId}: Order tracking data for a specific user.
 *
 * Key Security Decisions:
 * - User data is strictly private and only accessible by the authenticated user.
 * - Product listing is public to facilitate browsing.
 * - Admin privileges are granted based on document existence in the /roles_admin collection.
 * - All write operations on product data are restricted to admins.
 * - No user listing is allowed for security reasons.
 *
 * Denormalization for Authorization:
 * - The security rules rely heavily on path-based authorization (e.g., /users/{userId}/...) to avoid expensive `get()` calls.
 * - Admin status is determined by the existence of a document in the /roles_admin collection, avoiding the need to store admin roles within user documents.
 *
 * Structural Segregation:
 * - User-specific data (orders, payments, tracking) is segregated under the /users/{userId} path to enforce privacy and enable efficient querying.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profiles. Only the user can access their own profile.
     * @path /users/{userId}
     * @allow (create, update, get, list, delete) if the user is the owner of the profile (request.auth.uid == userId).
     * @deny (create) if the user ID in the request does not match the authenticated user's ID (request.resource.data.id != request.auth.uid).
     * @deny (update) if the user attempts to change their ID (request.resource.data.id != resource.data.id).
     * @deny (delete) if the user does not exist (resource == null).
     * @principle Enforces document ownership and data consistency.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // User listing is not permitted

      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure admin role assignment. Document existence grants admin privileges.
     * @path /roles_admin/{userId}
     * @allow (create, get, delete) if the requesting user is an existing admin.
     * @allow (list) if the requesting user is an existing admin.
     * @deny (create, get, delete) if the user is not an admin.
     * @principle Uses document existence to manage admin roles.
     */
    match /roles_admin/{userId} {
      function isAdmin() {
        return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
      }

      allow get: if isAdmin();
      allow list: if isAdmin();

      allow create: if isAdmin();
      allow update: if false;
      allow delete: if isAdmin();
    }

    /**
     * @description Secure product catalog. Publicly readable, but only admins can create/update/delete products.
     * @path /products/{productId}
     * @allow (get, list) to anyone.
     * @allow (create, update, delete) only to admins.
     * @principle Allows public read access while restricting write access to admins.
     */
    match /products/{productId} {
      function isAdmin() {
        return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
      }

      allow get: if true;
      allow list: if true;

      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Secure orders placed by a specific user.  Path-based ownership ensures only the user can access their orders.
     * @path /users/{userId}/orders/{orderId}
     * @allow (create, update, get, list, delete) if the user is the owner of the order (request.auth.uid == userId).
     * @deny (create) if the user ID in the request does not match the authenticated user's ID (request.resource.data.userId != request.auth.uid).
     * @deny (update) if the user attempts to change their userId (request.resource.data.userId != resource.data.userId).
     * @deny (delete) if the user does not exist (resource == null).
     * @principle Enforces document ownership and data consistency.
     */
    match /users/{userId}/orders/{orderId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure payment information for a specific user. Path-based ownership ensures only the user can access their payment information.
     * @path /users/{userId}/payments/{paymentId}
     * @allow (create, update, get, list, delete) if the user is the owner of the payment (request.auth.uid == userId).
     * @deny (create) if the user ID in the request does not match the authenticated user's ID (request.resource.data.userId != request.auth.uid).
     * @deny (update) if the user attempts to change their userId (request.resource.data.userId != resource.data.userId).
     * @deny (delete) if the user does not exist (resource == null).
     * @principle Enforces document ownership and data consistency.
     */
    match /users/{userId}/payments/{paymentId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure order tracking information for a specific user. Path-based ownership ensures only the user can access their order tracking information.
     * @path /users/{userId}/orderTracking/{trackingId}
     * @allow (create, update, get, list, delete) if the user is the owner of the order tracking (request.auth.uid == userId).
     * @deny (create) if the user ID in the request does not match the authenticated user's ID (request.resource.data.userId != request.auth.uid).
     * @deny (update) if the user attempts to change their userId (request.resource.data.userId != resource.data.userId).
     * @deny (delete) if the user does not exist (resource == null).
     * @principle Enforces document ownership and data consistency.
     */
    match /users/{userId}/orderTracking/{trackingId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}